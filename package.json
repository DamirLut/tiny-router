{
  "name": "tiny-router",
  "version": "0.1.0",
  "private": false,
  "description": "Ultra small hash-based React router with iOS style transitions for mini-apps.",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/damirlut/tiny-router.git"
  },
  "homepage": "https://github.com/damirlut/tiny-router#readme",
  "scripts": {
    "dev": "vite",
    "build:lib": "bun run build.ts",
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint . --fix",
    "preview": "vite preview",
    "test": "bun test",
    "test:cov": "bun test --coverage",
    "prepare": "bun run build:lib",
    "check": "bun run lint && bun test && bun run build:lib"
  },
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@happy-dom/global-registrator": "^18.0.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.2.20",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-plugin": "^7.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./global.css": "./dist/global.css"
  },
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "sideEffects": [
    "*.css"
  ],
  "publishConfig": {
    "access": "public"
  }
}
